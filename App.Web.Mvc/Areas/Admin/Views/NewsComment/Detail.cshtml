@model DataResult<NewsCommentDto>

<div class=" card container my-5">
	<div class="row">
		<div class="col-8 offset-2 card-body">
			<h4># @Model.Data.NewsComment.News.Id Comment Detail</h4>
			<hr />
			
			<div class="form-group">
				<b>Content :</b>
				@Model.Data.NewsComment.Comment
			</div>


			<div class="mb-3">
				<a asp-action="Index" asp-controller="NewsComment">Close</a>
			</div>
		</div>
	</div>
</div>

